<%= simple_form_for(resource, html: { class: 'login-form'}, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="text-center">
    <%= f.error_notification %>
    <%= render 'devise/shared/error_messages' %>
  </div>

  <div class="form-inputs">
    <%= f.input :username, label: false, placeholder: 'Username',
                input_html: { class: "username", class: "form-control", style: "height: 40px; margin-bottom: 10px;"} %>
    <%= f.input :name, label: false, placeholder: 'Nome',
                input_html: { class: "name", class: "form-control", style: "height: 40px; margin-bottom: 10px;"} %>
    <%= f.input :phone, input_html:{ class: "mask-phone", class: "form-control", style: "height: 40px; margin-bottom: 10px;" }, label: false, placeholder: 'Telefone' %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                placeholder: 'E-mail',
                input_html: { autocomplete: "email", class: "form-control", style: "height: 40px; margin-bottom: 10px;"}%>
    <%= f.input :password,
                required: true,
                label: false,
                placeholder: "senha no mÃ­nimo de #{@minimum_password_length} caracteres",
                input_html: { autocomplete: "new-password", class: "form-control", style: "height: 40px; margin-bottom: 10px;"} %>
    <%= f.input :password_confirmation,
                required: true,
                label: false,
                placeholder: 'Confirmar senha',
                input_html: { autocomplete: "new-password", class: "form-control", style: "height: 40px; margin-bottom: 10px;" } %>
  </div>

  <%= render 'devise/shared/button_submit', f: f, text: 'Cadastrar' %>
<% end %>

<div class="form-group d-md-flex">
  <div class="w-100 text-md-right">
    <%= render "devise/shared/links" %>
  </div>
</div>
